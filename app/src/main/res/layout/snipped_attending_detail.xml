<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Mr Albert John"
        android:id="@+id/attending_detail_host_name"
        android:textSize="17dp"
        android:textColor="#000"
        android:textStyle="bold"
        />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/attending_detail_host_nickname"
            android:layout_marginTop="2dp"
            android:textSize="15dp"
            android:layout_below="@id/attending_detail_host_name"
            android:layout_marginBottom="8dp"
            android:textColor="#000"
            android:layout_marginLeft="5dp"
            android:text="John"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/view"
                android:id="@+id/attending_detail_image_profile_view"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                android:gravity="center"
                android:text="View Profile"
                android:textColor="#000" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>