<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeec"
    tools:context="com.mpset.pokerevents.Activities.Register">
    <ScrollView
        android:id="@+id/register_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar"

                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/defaulticon"
                    android:id="@+id/image_upload_editprofile"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/change_photo_text"
                    android:textColor="#a68b52"
                    android:text="Change Photo"/>




                    <EditText
                        android:id="@+id/edittext_nickname_editprofile"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:hint="Nick name"
                        android:backgroundTint="#ededeb"
                        android:background="@drawable/bgg"
                        android:inputType="text"
                        android:textColorHint="#000000"
                        android:textSize="14dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#000"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>
                <EditText
                    android:id="@+id/edittext_first_editprofile"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:hint="First name"
                    android:backgroundTint="#ededeb"
                    android:background="@drawable/bgg"
                    android:inputType="text"
                    android:textColorHint="#000000"
                    android:textSize="14dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#000"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>
                <EditText
                    android:id="@+id/edittext_last_editprofile"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="Last name"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#ededeb"
                    android:background="@drawable/bgg"
                    android:inputType="text"
                    android:textColorHint="#000000"
                    android:textSize="14dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#000"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>
                <EditText
                    android:id="@+id/edittext_email_editprofile"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="Email"
                    android:backgroundTint="#ededeb"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bgg"
                    android:inputType="text"
                    android:textColorHint="#000000"
                    android:textSize="14dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#000"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>
                <EditText
                    android:id="@+id/edittext_phone_editprofile"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="Phone"
                    android:backgroundTint="#ededeb"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bgg"
                    android:inputType="text"
                    android:textColorHint="#000000"
                    android:textSize="14dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#000"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>
                <EditText
                    android:id="@+id/edittext_address_editprofile"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="Address"
                    android:backgroundTint="#ededeb"
                    android:background="@drawable/bgg"
                    android:layout_marginTop="5dp"
                    android:inputType="text"
                    android:textColorHint="#000000"
                    android:textSize="14dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#000"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>
                <Button
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Save"
                    android:layout_marginTop="45dp"
                    android:id="@+id/btn_save_edit_profile"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:background="@drawable/btnback"/>
            </LinearLayout>

    </ScrollView>

</LinearLayout>
