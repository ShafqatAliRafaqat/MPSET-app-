<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f1f1f1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mpset.pokerevents.Activities.FilterPage">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Distance"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"/>
        <com.appyvet.materialrangebar.RangeBar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:mrb_rangeBar="true"
            app:mrb_pinMaxFont="15sp"
            app:mrb_pinMinFont="12sp"
            app:mrb_rangeBarPaddingBottom="20dp"
            app:mrb_selectorBoundaryColor="#787888"
            app:mrb_selectorBoundarySize="2dp"
            app:mrb_pinTextColor="#fff"
            app:mrb_temporaryPins="true"
            app:mrb_selectorSize="10dp"
            app:mrb_tickEnd="100"
            app:mrb_tickInterval="1"
            app:mrb_tickStart="10"
            app:mrb_pinRadius="14dp"
            app:mrb_rangeBar_rounded="true"
            app:mrb_pinColor="#b49b66"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:text="10 miles"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:gravity="right"
                android:text="100 miles"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_from_filter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"

                android:background="#ffffff"
                android:gravity="left|center"
                android:text="12/12/2018"
                android:textColor="#050505"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/calendar"

                />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:background="#494949" />

            <TextView
                android:id="@+id/date_to_filter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:background="#ffffff"
                android:gravity="left|center"
                android:text="12/12/2018"
                android:textColor="#050505"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/calendar"

                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum Buy in"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textColor="#000"/>
        <com.appyvet.materialrangebar.RangeBar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:mrb_rangeBar="true"
            app:mrb_pinMaxFont="15sp"
            app:mrb_pinMinFont="12sp"
            app:mrb_rangeBarPaddingBottom="20dp"
            app:mrb_selectorBoundaryColor="#787888"
            app:mrb_selectorBoundarySize="2dp"
            app:mrb_pinTextColor="#fff"
            app:mrb_temporaryPins="true"
            app:mrb_selectorSize="10dp"
            app:mrb_tickEnd="1000"
            app:mrb_tickInterval="1"
            app:mrb_tickStart="5"
            app:mrb_pinRadius="14dp"
            app:mrb_rangeBar_rounded="true"
            app:mrb_pinColor="#b49b66"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:text="5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:gravity="right"
                android:text="1000"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/arrow"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="63dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:text="Game Profile"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="#494949" />
                <Spinner
                    android:id="@+id/spinner_game_profile_filter"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:pointerIcon="cell"
                    android:gravity="left"
                    android:background="#fff"
                    android:layout_marginRight="75dp"
                    android:spinnerMode="dropdown"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/arrow"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="63dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:text="Game Type"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:background="#494949" />

                <Spinner
                    android:id="@+id/spinner_game_type_filter"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:pointerIcon="cell"
                    android:gravity="left"
                    android:background="#fff"
                    android:layout_marginRight="75dp"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>
        </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:text="Location"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="41dp"
                    android:background="#494949" />
                <!--<RatingBar-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:numStars="5"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/rating_archive_host"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:textColor="#000"-->
                    <!--/>-->
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:layout_gravity="center"
                    style = "@style/Widget.AppCompat.RatingBar"
                    android:numStars = "5"
                    android:rating="2.5"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:id="@+id/player_rating_my_profile"
                    android:textSize="16dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Save"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btn_save_filter"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/btnback"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Reset"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btn_reset_filter"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/btnback"/>

</LinearLayout>
</ScrollView>