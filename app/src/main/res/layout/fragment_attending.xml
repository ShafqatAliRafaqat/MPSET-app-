<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.Attending">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In Progress"
        android:id="@+id/title_in_progress"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/card_in_progress"
    android:elevation="5dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear1"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="CardsChat Hurricane Harvey Charity Event:"
                android:id="@+id/event_name_inprogress"
                android:textSize="12dp"
                android:textColor="#000"
                android:textStyle="bold"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/linear4"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/location"
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/location_event_inprogress"
                android:textSize="12dp"
                android:textColor="#000"
                android:layout_marginLeft="5dp"
                android:text="Legion Hall,645 5 Broad St"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear3"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/linear2"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/gametype"
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/game_event_type_inprogress"
                android:textSize="12dp"
                android:textColor="#000"
                android:layout_marginLeft="5dp"
                android:text="Game Type"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear4"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/linear3"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"

                android:src="@drawable/calendar"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_date_event_inprogress"
                android:layout_marginLeft="5dp"
                android:textSize="10dp"
                android:textColor="#000"
                android:text="April 7,2018 9:22 PM"
                />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attending"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_attending"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currently no attending event available"
                android:textColor="#838383"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:id="@+id/empty_event_attending"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:textSize="12dp" />

    </RelativeLayout>


</LinearLayout>
</android.support.v4.widget.NestedScrollView>