    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="$ Buyings"
                        android:textColor="#000"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="5dp"
                        android:text="200"
                        android:id="@+id/buyins_inprogress"
                        android:textColor="#000"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="$ Home Payment"

                        android:textColor="#000"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="200000"
                        android:id="@+id/home_payment_inprogress"
                        android:textColor="#000"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="New York United State"
                    android:textColor="#000"
                    android:id="@+id/address_inprogress"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/edit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/calendar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/date_inprogresss"
                    android:text="13/12/2018 9:20 AM"
                    android:textColor="#000"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status  "
                    android:textColor="#000"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/forwadarrow" />

                <TextView
                    android:id="@+id/status_inprogress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="On Going"
                    android:textColor="#000"
                    android:textSize="14dp" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Game Rules"
                android:id="@+id/text_table"
                android:textColor="#a68c54"
                android:textSize="14dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/linear_player1"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/adduser"
                android:id="@+id/player1"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/decline"
                android:visibility="gone"
                android:id="@+id/player1_remove"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/player1"
                android:src="@drawable/adduser"
                android:id="@+id/player2"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/player1"
                android:src="@drawable/decline"
                android:visibility="gone"
                android:layout_marginLeft="30dp"
                android:id="@+id/player2_remove"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/player2"
                android:src="@drawable/adduser"
                android:id="@+id/player3"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/player2"
                android:src="@drawable/decline"
                android:visibility="gone"
                android:layout_marginLeft="30dp"
                android:id="@+id/player3_remove"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_image"
            android:gravity="center"
            android:layout_below="@id/linear_player1"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear_player3"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/adduser"
                    android:id="@+id/player10"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/decline"
                    android:visibility="gone"
                    android:layout_marginLeft="35dp"
                    android:id="@+id/player10_remove"
                    />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@id/player10"
                    android:id="@+id/player9"
                    android:src="@drawable/adduser"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_below="@id/player10"
                    android:src="@drawable/decline"
                    android:visibility="gone"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="32dp"
                    android:id="@+id/player9_remove"
                    />
            </RelativeLayout>
    <ImageView
        android:layout_width="280dp"
        android:layout_height="160dp"
        android:layout_below="@id/linear_player1"
        android:layout_gravity="center"
        android:id="@+id/table"
        android:layout_centerInParent="true"
        android:src="@drawable/table"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/linear_player4"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/adduser"
                android:id="@+id/player4"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/decline"
                android:visibility="gone"
                android:id="@+id/player4_remove"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:id="@+id/player5"
                android:layout_below="@id/player4"
                android:src="@drawable/adduser"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/player4"
                android:src="@drawable/decline"
                android:visibility="gone"
                android:layout_marginTop="32dp"
                android:id="@+id/player5_remove"
                />
        </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/linear_image"
            android:id="@+id/linear_player12"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/player8"
                android:src="@drawable/adduser"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/decline"
                android:visibility="gone"
                android:id="@+id/player8_remove"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/player7"
                android:layout_toRightOf="@id/player8"
                android:src="@drawable/adduser"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/player8"
                android:src="@drawable/decline"
                android:layout_marginLeft="20dp"
                android:visibility="gone"
                android:id="@+id/player7_remove"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/player7"
                android:id="@+id/player6"
                android:src="@drawable/adduser"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/player7"
                android:src="@drawable/decline"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:id="@+id/player6_remove"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:text="Audit"
            android:id="@+id/audit_title"
            android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"

            android:textSize="18dp"
            android:gravity="center"
        android:textColor="@color/textColorBlack"
            android:background="@drawable/audit"/>

    </RelativeLayout>





</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/btnback"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Buy in"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/btnback"
            android:textColor="#fff"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginLeft="15dp"
            android:textSize="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Home Payment"/>
    </LinearLayout>
</RelativeLayout>