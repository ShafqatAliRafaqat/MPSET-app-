<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mpset.pokerevents.Activities.NewEventFriendSelection">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:hint="Search Friend"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="14dp"
        android:drawableTint="#000"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/search"
        android:textSize="12dp"
        android:background="@drawable/searchbg"
        android:layout_below="@id/toolbar"
        android:id="@+id/search_select_friend"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_selection_friends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="50dp"
        android:layout_below="@id/search_select_friend" />
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/btn_create_event_friend"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/btnback"/>
    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit_selection"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/colorAccent" />
</RelativeLayout>
