<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mpset.pokerevents.Activities.CreateEventGameType">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColorBlack"
                android:text="Game Type"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:weightSum="2"
                android:background="@drawable/bgbar"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/text_private"
                    android:background="@drawable/selectedbar"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:text="Private"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/text_public"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/selectedbarwhite"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:text="Public"/>


            </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/calendar"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="75dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:textColor="@color/textColorBlack"
                        android:layout_gravity="center"
                        android:text="Date"/>
                    <!--<View-->
                        <!--android:layout_width="1dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_marginLeft="64dp"-->
                        <!--android:background="#494949" />-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/date_public"
                        android:layout_marginRight="90dp"
                        android:layout_marginLeft="90dp"
                        android:layout_gravity="center"
                        android:text="20/12/2018"
                        android:textSize="17dp"
                        android:gravity="left|center"
                        android:textColor="#050505"
                        android:background="#ffffff"
                        />

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/time"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="75dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:layout_gravity="center"
                        android:textColor="@color/textColorBlack"
                        android:text="Time"/>
                    <!--<View-->
                        <!--android:layout_width="1dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_marginLeft="60dp"-->
                        <!--android:background="#494949" />-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/time_public"
                        android:layout_marginRight="90dp"
                        android:layout_marginLeft="90dp"
                        android:layout_gravity="center"
                        android:text="20:00"
                        android:textSize="17dp"
                        android:gravity="left|center"
                        android:textColor="#050505"
                        android:background="#ffffff"
                        />

                </LinearLayout>
            </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/edit_event_name"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorBlack"
            android:textSize="13dp"
            android:text="Location"/>
        <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_marginLeft="35dp"-->
            <!--android:background="#494949" />-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/location_event"
            android:backgroundTint="#bfbfbf"
            android:layout_marginRight="25dp"/>

    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Voting Options"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:textSize="13dp"
                        android:layout_gravity="center"
                        />

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="#c09549"
                            android:layout_weight="5"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:layout_marginRight="20dp"
                            android:id="@+id/check_voting_enable"/>
                    </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="10dp"
            android:id="@+id/private_event"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voting Options"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/textColorBlack"
                    android:textSize="13dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/start_date_friends"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="20/12/2018"
                            android:textColor="#000000"
                            android:textSize="16dp" />
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/calendar"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="22dp"
                            android:layout_marginRight="30dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:id="@+id/end_date_friends"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="20/12/2018"
                            android:layout_marginBottom="5dp"
                            android:textSize="16dp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:background="#ffffff"
                            />
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/calendar"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="22dp"
                            android:layout_marginRight="30dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photos"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="10dp"

            android:textSize="14dp"
            android:layout_marginLeft="10dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="#e2e2e2"
                        android:id="@+id/image1_create_event"

                        android:layout_margin="5dp"
                        android:src="@drawable/imageholder"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="#e2e2e2"
                        android:id="@+id/image2_create_event"
                        android:layout_margin="5dp"
                        android:src="@drawable/imageholder"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="#e2e2e2"
                        android:id="@+id/image3_create_event"
                        android:layout_margin="5dp"
                        android:src="@drawable/imageholder"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="#e2e2e2"
                        android:id="@+id/image4_create_event"
                        android:layout_margin="5dp"
                        android:src="@drawable/imageholder"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="#e2e2e2"
                        android:id="@+id/image5_create_event"
                        android:layout_margin="5dp"
                        android:src="@drawable/imageholder"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:padding="22dp"
                        android:id="@+id/image_picker_create_event"
                        android:background="#e2e2e2"
                        android:layout_margin="5dp"
                        android:src="@drawable/addbtnimage"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_public"
        android:visibility="invisible"

        android:orientation="vertical">

        <Button
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Submit"
            android:layout_marginTop="25dp"
            android:id="@+id/btn_create_public"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:background="@drawable/btnback"/>
    </LinearLayout>


    </LinearLayout>


    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Next"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btn_next_friend"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/btnback"/>
</LinearLayout>
        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/colorAccent" />

    </RelativeLayout>
</ScrollView>
