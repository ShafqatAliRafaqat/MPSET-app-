<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mpset.pokerevents.Activities.SmsVerification">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the verification code that we just sent you"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:layout_marginTop="30dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
        android:layout_width="60dp"
        android:layout_height="60dp"
            android:textColor="#c09549"
android:maxLength="1"
    android:inputType="number"
            android:gravity="center"
            android:id="@+id/edittext_ver_code1"
            android:background="@drawable/goldcircle"
        />
        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textColor="#c09549"
            android:layout_marginLeft="15dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:id="@+id/edittext_ver_code2"
            android:background="@drawable/blackcircle"
            />
        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textColor="#c09549"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:id="@+id/edittext_ver_code3"
            android:background="@drawable/blackcircle"
            android:layout_marginLeft="15dp" />

        <EditText
            android:id="@+id/edittext_ver_code4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/blackcircle"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#c09549" />
    </LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Verify Now"
        android:layout_marginTop="60dp"
        android:id="@+id/btn_ver_code"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:background="@drawable/btnback"/>

    <TextView
        android:id="@+id/text_resent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/resend"
        android:textColor="#c09549"
        android:textSize="14dp" />

</LinearLayout>
